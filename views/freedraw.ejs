<%- include header.ejs %>


<div class="container-fluid" style="padding-top:60px; height:100%;">

    <div class="row" style="height: 100%;">


        <!-- 중앙 블락 조합 -->
        <div class="col-md-5" style="overflow-y: scroll; height:100%;">


            <div class="col-md-5" style="height: 100%">
                <!-- 블락 리스트 -->
                <div style="border-right: 1px solid #cccccc; height: 100%;">
                    <div id="blocklist" style="z-index:2; position:relative;">

                        <!-- 블락 저장 불러오기 -->
                        <div class="row text-right" style="padding-bottom: 5px;">
                            <div class="col-xs-12">
                                <button data-loader="load" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-folder-open"></span>&nbsp; Load </button>
                                <button data-loader="save" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-hdd"></span>&nbsp; Save </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-7" style="height: 100%;">
                <div style="height: 100%">
                    <div id="stacklist_top"></div>
                    <div id="stacklist">
                        <!--<button id="debugStack">stackJSON</button>-->
                    </div>
                    <div id="stacklist_bottom"></div>
                </div>
                <!--<button onclick="void( console.log( JSON.stringify(tutorialBlock.blocksToJSON()) ));">toJSON</button>-->
            </div>
        </div>
        <!-- // 중앙 블락 조합 -->





        <!-- 우측 렌더링 부분 -->
        <div class="col-md-7" style="height: 100%;" >
            <div style="position: relative; height: 100%;">

                <!-- 실제 렌더러 -->
                <div style="z-index:2; position:relative; background: #000000; border-radius: 10px; width:100%; height:100%;"
                     id="srender">
                    <!--<canvas id="canvasRender"></canvas>-->
                </div>

                <!-- 렌더러 표시 -->
                <div style="z-index:3; position:absolute; padding:5px; top:0;">
                    <h2 style="color: #cccccc;">Renderer</h2>
                </div>

                <!-- 축 설명 -->
                <div style="z-index:3; position: absolute; bottom:0; right:0;">
                    <h4>

                        <span class="text-danger"><b>X</b></span> /
                        <span class="text-success"><b>Y</b></span> /
                        <span class="text-primary"><b>Z</b></span>
                        <br />
                        <span class="text-info">'R' Reset</span>
                    </h4>
                </div>

            </div>
        </div>
        <!-- // 우측 렌더링 부분 -->


    </div>
</div>

<script id="dataLoaderHead" type="text/x-jquery-tmpl">
<table class="table table-hover">
    <thead>
        <tr>
            <th>#Slot</th>
            <th>블락 정보</th>
            <th>저장일시</th>
            <th>선택</th>
        </tr>
    </thead>

    <tbody>

    </tbody>
</table>
</script>

<script id="dataLoaderBody" type="text/x-jquery-tmpl">
    <tr>
            <td>Slot #${slotSeq} </td>
            <td>${blockInfoStr}</td>
            <td>${regdate}</td>
            <td>
                <input type="radio" id="slotSeq" name="slotSeq" value="${slotSeq}" />
            </td>
    </tr>
</script>


<script type="text/javascript">
    <% if( typeof slotData !== 'undefined') { %>
        var slotData = <%-slotData%>;
    <% } else { %>
        var slotData = null;
    <% } %>
</script>


<%- include footer.ejs %>